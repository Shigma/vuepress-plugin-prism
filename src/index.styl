$codeColor ?= #ffffff
$codeBgColor ?= #282c34
$languageNameColor ?= rgba(255, 255, 255, 0.4)
$highlightLinesBgColor ?= rgba(0, 0, 0, 66%)
$lineNumbersColor ?= rgba(255, 255, 255, 0.3)
$lineNumbersWrapperWidth ?= 3.5rem

.content div.code-block
  position relative
  line-height 1.4
  border-radius 6px
  background-color $codeBgColor

  .language-name
    position absolute
    z-index 3
    top 0.8em
    right 1em
    font-size 0.75rem
    user-select none
    color $languageNameColor

  pre
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    overflow auto
    z-index 10
    position relative
    code
      color $codeColor
      padding 0
      background-color transparent
      border-radius 0

  .highlight-lines, .line-numbers
    padding 1.25rem 0
    font-size 0.85em
    user-select none
    position absolute
    left 0

  .highlight-lines
    line-height 1.4rem
    width 100%
    .highlighted
      z-index 1
      position relative
      background-color $highlightLinesBgColor

  .line-numbers
    line-height 1.3rem
    text-align center
    z-index 3
    color $lineNumbersColor
    width $lineNumbersWrapperWidth
    border-right 1px solid $highlightLinesBgColor

  &.has-line-numbers pre
    padding-left $lineNumbersWrapperWidth + 1.5rem
